# =============================================================================
# SmartDalali Frontend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL
# For development: Use relative path /api/v1 (Vite proxy will handle it)
# For production: Use full URL like https://api.smartdalali.com/api/v1
VITE_API_URL=/api/v1

# -----------------------------------------------------------------------------
# WebSocket Configuration
# -----------------------------------------------------------------------------
# WebSocket URL for real-time features (chat, notifications)
# If not set, will be derived from VITE_API_URL
# Example: wss://api.smartdalali.com/ws
VITE_WS_URL=

# -----------------------------------------------------------------------------
# Google Maps API Key (for frontend map displays)
# -----------------------------------------------------------------------------
# Get your API key from: https://console.cloud.google.com/google/maps-apis
# This is different from the backend key - you may use the same key or separate keys
VITE_GOOGLE_MAPS_API_KEY=

# -----------------------------------------------------------------------------
# Mapbox API Key (Optional - for alternative map provider)
# -----------------------------------------------------------------------------
# If you prefer Mapbox over Google Maps
VITE_MAPBOX_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# Stripe Publishable Key (for payment forms)
# -----------------------------------------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=

# -----------------------------------------------------------------------------
# Firebase Configuration (for Firebase Auth)
# -----------------------------------------------------------------------------
# Get from: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Application name (for display in browser title, etc.)
VITE_APP_NAME=SmartDalali

# Application version
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_ENV=development

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable features via environment variables
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false

# Sentry DSN (if error tracking is enabled)
VITE_SENTRY_DSN=

# Google Analytics ID (if analytics is enabled)
VITE_GA_TRACKING_ID=

# -----------------------------------------------------------------------------
# Social Login Configuration
# -----------------------------------------------------------------------------
# These are typically handled by the backend, but you may need them for
# frontend OAuth flows
VITE_GOOGLE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=
VITE_MICROSOFT_CLIENT_ID=
VITE_APPLE_CLIENT_ID=

# -----------------------------------------------------------------------------
# Development Server Configuration
# -----------------------------------------------------------------------------
# Backend URL for Vite proxy (development only)
# In production, set VITE_API_URL to full backend URL instead
VITE_BACKEND_URL=http://127.0.0.1:8000

# Development server port
VITE_PORT=5173
